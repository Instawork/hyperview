<doc
  xmlns="https://hyperview.org/hyperview"
  xmlns:ns1="https://hyperview.org/hyperview-intercom"
>
  <screen>
    <styles>
      <style
        id="Header"
        alignItems="center"
        backgroundColor="white"
        flexDirection="row"
        paddingLeft="24"
        paddingRight="24"
        paddingTop="16"
      />
      <style id="Header__Back" height="19" marginRight="16" width="24" />
      <style id="Header__Title" color="black" fontSize="24" fontWeight="600" />
      <style id="Body" backgroundColor="white" flex="1" />
      <style id="Main" backgroundColor="white" flex="1" />
      <style id="Compliments" flexDirection="row" flexWrap="wrap" margin="16" />
      <style
        id="Compliment"
        alignItems="center"
        backgroundColor="#63cb76"
        borderRadius="16"
        flexDirection="row"
        marginBottom="16"
        marginRight="16"
        paddingBottom="8"
        paddingLeft="16"
        paddingRight="16"
        paddingTop="8"
      />
      <style id="Compliment--Good" backgroundColor="#63cb76" />
      <style id="Compliment--Bad" backgroundColor="#ff4847" />
      <style
        id="Compliment__Label"
        color="white"
        fontSize="16"
        fontWeight="600"
      />
      <style
        id="Compliment__Badge"
        backgroundColor="white"
        borderRadius="16"
        flex="0"
        marginLeft="8"
        padding="4"
        width="24"
      />
      <style
        id="Compliment__BadgeLabel"
        color="#4e4d4d"
        fontSize="12"
        fontWeight="600"
        textAlign="center"
      />
      <style id="FeedbackContainer" flex="1" height="140" paddingBottom="8" />
      <style id="FeedbackContainer__Extra" flexDirection="row" />
      <style
        id="Feedback"
        borderColor="#e1e1e1"
        borderRadius="8"
        borderWidth="1"
        flex="1"
        marginLeft="16"
        padding="16"
        width="200"
      />
      <style
        id="Spinner"
        flex="1"
        flexDirection="row"
        justifyContent="center"
        padding="24"
      />
    </styles>
    <body style="Body" safe-area="true">
      <header style="Header">
        <image
          action="back"
          href="/case_studies/index.xml"
          source="/case_studies/back@2x.png"
          style="Header__Back"
        />
        <text style="Header__Title">Feedback Widget</text>
      </header>
      <view scroll="true" style="Main">
        <view style="Compliments">
          <view style="Compliment Compliment--Good">
            <text style="Compliment__Label">Punctual</text>
            <view style="Compliment__Badge">
              <text style="Compliment__BadgeLabel">2</text>
            </view>
          </view>
          <view style="Compliment Compliment--Good">
            <text style="Compliment__Label">Professional</text>
            <view style="Compliment__Badge">
              <text style="Compliment__BadgeLabel">10</text>
            </view>
          </view>
          <view style="Compliment Compliment--Good">
            <text style="Compliment__Label">Tidy</text>
            <view style="Compliment__Badge">
              <text style="Compliment__BadgeLabel">4</text>
            </view>
          </view>
          <view style="Compliment Compliment--Good">
            <text style="Compliment__Label">Correct Attire</text>
            <view style="Compliment__Badge">
              <text style="Compliment__BadgeLabel">6</text>
            </view>
          </view>
          <view style="Compliment Compliment--Good">
            <text style="Compliment__Label">Stayed Late</text>
            <view style="Compliment__Badge">
              <text style="Compliment__BadgeLabel">1</text>
            </view>
          </view>
        </view>
        <view
          id="feedback"
          scroll="true"
          scroll-orientation="horizontal"
          style="FeedbackContainer"
        >
          <view style="Feedback">
            <text style="Feedback__Label">
              Bill did a great job! Good attitude, worked hard, would love to
              have him back.
            </text>
          </view>
          <view style="Feedback">
            <text style="Feedback__Label">
              Bill did a great job! Good attitude, worked hard, would love to
              have him back.
            </text>
          </view>
          <view
            action="append"
            delay="1000"
            href="#more-feedback"
            once="true"
            show-during-load="indicator"
            style="Feedback"
            target="feedback"
            trigger="visible"
          >
            <text style="Feedback__Label">
              Bill did a great job! Good attitude, worked hard, would love to
              have him back.
            </text>
          </view>
          <view id="indicator" hide="true" style="Spinner">
            <spinner />
          </view>
        </view>
        <view style="Compliments">
          <view style="Compliment Compliment--Bad">
            <text style="Compliment__Label">Punctual</text>
            <view style="Compliment__Badge">
              <text style="Compliment__BadgeLabel">2</text>
            </view>
          </view>
          <view style="Compliment Compliment--Bad">
            <text style="Compliment__Label">Professional</text>
            <view style="Compliment__Badge">
              <text style="Compliment__BadgeLabel">10</text>
            </view>
          </view>
          <view style="Compliment Compliment--Bad">
            <text style="Compliment__Label">Tidy</text>
            <view style="Compliment__Badge">
              <text style="Compliment__BadgeLabel">4</text>
            </view>
          </view>
          <view style="Compliment Compliment--Bad">
            <text style="Compliment__Label">Correct Attire</text>
            <view style="Compliment__Badge">
              <text style="Compliment__BadgeLabel">6</text>
            </view>
          </view>
          <view style="Compliment Compliment--Bad">
            <text style="Compliment__Label">Stayed Late</text>
            <view style="Compliment__Badge">
              <text style="Compliment__BadgeLabel">1</text>
            </view>
          </view>
        </view>
      </view>
    </body>
  </screen>
  <screen>
    <body>
      <view id="more-feedback" style="FeedbackContainer__Extra">
        <view style="Feedback">
          <text style="Feedback__Label">Something else was added :)</text>
        </view>
        <view style="Feedback">
          <text style="Feedback__Label">Something else was added :)</text>
        </view>
        <view style="Feedback">
          <text style="Feedback__Label">Something else was added :)</text>
        </view>
      </view>
    </body>
  </screen>
</doc>
