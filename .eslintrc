{
  "extends": ["plugin:instawork/recommended"],
  "plugins": ["instawork"],
  "rules": {
    "import/no-extraneous-dependencies": [
      "warn",
      {
        "devDependencies": [
          "**/*.stories.js",
          "**/stories/*.js",
          "**/*.test.js",
          "**/stories.js",
          "**/scripts/*",
          "**/scripts/*/*",
          "**/scripts/*/*/*",
          "**/storybook/*",
          "**/test",
          "**/test/*",
          "**/test/**/*"
        ]
      }
    ],
    "import/no-internal-modules": [
      "warn", {
        "allow": [
          "hyperview/**",
          "react-native/Libraries/StyleSheet/StyleSheet"
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": [ "**/types.js" ],
      "rules": {
        "no-use-before-define": "off",
        "max-len": "off"
      }
    }
  ]
}
