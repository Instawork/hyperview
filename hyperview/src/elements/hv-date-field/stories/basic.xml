<doc xmlns="https://hyperview.org/hyperview">
  <screen>
    <styles>
      <style id="body" backgroundColor="white" flex="1" />
      <style
        id="field"
        borderBottomColor="#E1E1E1"
        borderBottomWidth="1"
        borderColor="#4E4D4D"
        flex="1"
        paddingBottom="8"
        paddingTop="8"
      >
        <modifier pressed="true">
          <style borderBottomColor="#4778FF" />
        </modifier>
        <modifier focused="true">
          <style borderBottomColor="#4778FF" />
        </modifier>
      </style>
      <style id="field-text" fontSize="16" fontWeight="normal" />
      <style
        id="modal"
        backgroundColor="white"
        borderTopColor="#E1E1E1"
        borderTopWidth="1"
        shadowOffsetX="0"
        shadowOffsetY="-5"
        shadowOpacity="0.2"
        shadowRadius="5"
      />
      <style id="modal-overlay" backgroundColor="#1f1f1fa0" />
      <style
        id="modal-text"
        color="blue"
        fontSize="16"
        fontWeight="600"
        marginBottom="16"
        padding="24"
      >
        <modifier pressed="true">
          <style opacity="0.5" />
        </modifier>
      </style>
    </styles>
    <body style="body">
      <date-field
        id="date-field"
        name="date-field"
        field-style="field"
        field-text-style="field-text"
        label-format="MMMM D, YYYY"
        modal-style="modal"
        modal-overlay-style="modal-overlay"
        modal-text-style="modal-text"
        placeholder="Select date"
        placeholderTextColor="#8D9494"
      />
    </body>
  </screen>
</doc>
