<doc xmlns="https://hyperview.org/hyperview">
  <screen>
    <styles>
      <style id="body" backgroundColor="white" flex="1" />
      <style id="select" marginTop="24" />
      <style
        id="select-separator"
        borderTopWidth="1"
        borderTopColor="#e1e3e3"
        marginLeft="24"
        marginRight="24"
      />
      <style
        id="option"
        flex="1"
        flexDirection="row"
        alignItems="center"
        justifyContent="space-between"
        paddingLeft="24"
        paddingRight="24"
        paddingBottom="16"
        paddingTop="16"
      />
      <style
        id="radio-outer"
        width="20"
        height="20"
        borderRadius="10"
        borderWidth="1"
        borderColor="#bdc4c4"
      >
        <modifier pressed="true">
          <style borderColor="#8d9494" borderWidth="1" />
        </modifier>
        <modifier selected="true">
          <style borderColor="#4778ff" borderWidth="2" />
        </modifier>
      </style>
      <style
        id="radio-inner"
        width="10"
        height="10"
        borderRadius="5"
        opacity="0"
        marginTop="3"
        marginLeft="3"
      >
        <modifier selected="true">
          <style backgroundColor="#4778ff" opacity="1" />
        </modifier>
      </style>
      <style
        id="label"
        fontFamily="HKGrotesk-Regular"
        color="#4e4d4d"
        fontSize="16"
        lineHeight="18"
      >
        <modifier selected="true">
          <style color="#312f2f" />
        </modifier>
        <modifier pressed="true">
          <style color="#312f2f" />
        </modifier>
      </style>
    </styles>
    <body style="body">
      <select-single id="select" style="select" name="choice">
        <view style="select-separator" />
        <option style="option" value="option-1">
          <text style="label">Option 1</text>
          <view style="radio-outer">
            <view style="radio-inner" />
          </view>
        </option>
        <view style="select-separator" />
        <option style="option" value="option-2">
          <text style="label">Option 2</text>
          <view style="radio-outer">
            <view style="radio-inner" />
          </view>
        </option>
        <view style="select-separator" />
        <option style="option" value="option-3">
          <text style="label">Option 3</text>
          <view style="radio-outer">
            <view style="radio-inner" />
          </view>
        </option>
      </select-single>
    </body>
  </screen>
</doc>
