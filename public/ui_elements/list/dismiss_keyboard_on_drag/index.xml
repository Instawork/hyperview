  fontSize="20"
  fontWeight="bold"
  color="#cccccc"
/>
<style id="Bottom_Tab__Label__Selected" color="#4778FF"/>
<style id="Bottom_Tab__Selected"/>
<style
  id="Bottom_Tab__Icon"
  flex="0"
  justifyContent="center"
  alignItems="center"
  padding="10"
/>
<style
  id="Footer"
  flex="1"
  flexDirection="row"
  flexShrink="1"
  flexGrow="0"
  bottom="45"
  alignItems="stretch"
  justifyContent="space-around"
/>

      
