
<doc xmlns="https://hyperview.org/hyperview">
  <screen>
    <styles>
      <style
  id="Header"
  alignItems="center"
  backgroundColor="white"
  borderBottomColor="#eee"
  borderBottomWidth="1"
  flexDirection="row"
  paddingLeft="24"
  paddingRight="24"
  paddingBottom="16"/>
<style id="Header__Back" color="blue" fontSize="16" fontWeight="600" paddingRight="16"/>
<style id="Header__Title" color="black" fontSize="24" fontWeight="600"/>
<style id="Body" backgroundColor="white" flex="1"/>
<style id="Description" fontSize="16" fontWeight="600" margin="24"/>
<style
  id="Item"
  alignItems="center"
  backgroundColor="#FFFFFF"
  borderBottomColor="#eee"
  borderBottomWidth="1"
  flex="1"
  flexDirection="row"
  height="48"
  justifyContent="space-between"
  paddingLeft="24"
  paddingRight="24"/>
<style id="Item__Left" flex="1" flexDirection="row"/>
<style id="Item__Label" fontSize="18" fontWeight="normal"/>
<style id="Item__Chevron" fontSize="18" fontWeight="bold"/>
<style
  id="Button"
  backgroundColor="#63CB76"
  borderRadius="16"
  flex="1"
  flexDirection="row"
  justifyContent="center"
  margin="24"
  padding="24"/>
<style id="Button__Label" color="white" fontSize="24" fontWeight="bold"/>
<style id="Button--Disabled" opacity="0.5"/>
<style
  id="Button--Shadow"
  elevation="4"
  shadowColor="black"
  shadowOffsetX="0"
  shadowOffsetY="4"
  shadowOpacity="0.5"
  shadowRadius="4">
  <modifier pressed="true">
  <style elevation="1" shadowOffsetY="1" shadowRadius="1"/>
  </modifier>
</style>
<style id="Button--Elevation3" elevation="3"/>
<style id="Button--Elevation10" elevation="10"/>
<style
  id="Bottom_Tab"
  flex="1"
  height="48"
  justifyContent="center"
  alignItems="center"
/>
<style
  id="Bottom_Tab__Label"
  fontSize="20"
  fontWeight="bold"
  color="#cccccc"
/>
<style id="Bottom_Tab__Label__Selected" color="#4778FF"/>
<style id="Bottom_Tab__Selected"/>
<style
  id="Bottom_Tab__Icon"
  flex="0"
  justifyContent="center"
  alignItems="center"
  padding="10"
/>
<style
  id="Footer"
  flex="1"
  flexDirection="row"
  flexShrink="1"
  flexGrow="0"
  bottom="45"
  alignItems="stretch"
  justifyContent="space-around"
/>

      
  <style id="Flex" flex="1" flexDirection="row" justifyContent="space-between"/>
  <style id="Main" flex="1"/>

    </styles>
    <body style="Body" safe-area="true">
      <header style="Header">
        
          <text action="back" href="#" style="Header__Back">Back</text>
        
        <text style="Header__Title">Event Dispatch</text>
        
      </header>
      
  <view style="Main">
    <view style="Flex">
      <web-view html="&lt;button style=&quot;font-size: 80px&quot;
                      onClick=&quot;window.ReactNativeWebView.postMessage('hyperview:helloworld')&quot;&gt;Post message&lt;/button&gt;"/>
      <view
        action="append"
        event-name="helloworld"
        href="/ui_elements/web_views/dispatch_event/append.xml"
        scroll="true"
        style="Main"
        trigger="on-event"/>
    </view>
  </view>

    </body>
  </screen>
  
<screen id="loadingScreen">
  <styles>
    <style
      id="Header"
      alignItems="center"
      backgroundColor="white"
      borderBottomColor="#eee"
      borderBottomWidth="1"
      flexDirection="row"
      paddingLeft="24"
      paddingRight="24"
      paddingBottom="16"/>
    <style id="Header__Back" color="blue" fontSize="16" fontWeight="600" paddingRight="16"/>
    <style id="Header__Title" color="black" fontSize="24" fontWeight="600"/>
    <style id="Body" backgroundColor="white" flex="1"/>
    <style id="LoadingText" fontSize="14" fontWeight="normal" marginBottom="16"/>
    <style id="Loading" alignItems="center" flex="1" justifyContent="center"/>
  </styles>
  <body style="Body" safe-area="true">
    <header style="Header">
      <text action="back" href="#" style="Header__Back">Back</text>
    </header>
    <view style="Loading">
      <text style="LoadingText">Loadingâ€¦</text>
      <spinner/>
    </view>
  </body>
</screen>

</doc>
