
<doc xmlns="https://hyperview.org/hyperview">
  <screen>
    <styles>
      <style
  id="Header"
  alignItems="center"
  backgroundColor="white"
  borderBottomColor="#eee"
  borderBottomWidth="1"
  flexDirection="row"
  paddingLeft="24"
  paddingRight="24"
  paddingBottom="16"/>
<style id="Header__Back" color="blue" fontSize="16" fontWeight="600" paddingRight="16"/>
<style id="Header__Title" color="black" fontSize="24" fontWeight="600"/>
<style id="Body" backgroundColor="white" flex="1"/>
<style id="Description" fontSize="16" fontWeight="600" margin="24"/>
<style
  id="Item"
  alignItems="center"
  backgroundColor="#FFFFFF"
  borderBottomColor="#eee"
  borderBottomWidth="1"
  flex="1"
  flexDirection="row"
  height="48"
  justifyContent="space-between"
  paddingLeft="24"
  paddingRight="24"/>
<style id="Item__Left" flex="1" flexDirection="row"/>
<style id="Item__Label" fontSize="18" fontWeight="normal"/>
<style id="Item__Chevron" fontSize="18" fontWeight="bold"/>
<style
  id="Button"
  backgroundColor="#63CB76"
  borderRadius="16"
  flex="1"
  flexDirection="row"
  justifyContent="center"
  margin="24"
  padding="24"/>
<style id="Button__Label" color="white" fontSize="24" fontWeight="bold"/>
<style id="Button--Disabled" opacity="0.5"/>
<style
  id="Button--Shadow"
  elevation="4"
  shadowColor="black"
  shadowOffsetX="0"
  shadowOffsetY="4"
  shadowOpacity="0.5"
  shadowRadius="4">
  <modifier pressed="true">
  <style elevation="1" shadowOffsetY="1" shadowRadius="1"/>
  </modifier>
</style>
<style id="Button--Elevation3" elevation="3"/>
<style id="Button--Elevation10" elevation="10"/>
<style
  id="Bottom_Tab"
  flex="1"
  height="48"
  justifyContent="center"
  alignItems="center"
/>
<style
  id="Bottom_Tab__Label"
  fontSize="20"
  fontWeight="bold"
  color="#cccccc"
/>
<style id="Bottom_Tab__Label__Selected" color="#4778FF"/>
<style id="Bottom_Tab__Selected"/>
<style
  id="Bottom_Tab__Icon"
  flex="0"
  justifyContent="center"
  alignItems="center"
  padding="10"
/>
<style
  id="Footer"
  flex="1"
  flexDirection="row"
  flexShrink="1"
  flexGrow="0"
  bottom="45"
  alignItems="stretch"
  justifyContent="space-around"
/>

      
  <style id="SelectCustom__Label" color="#4e4d4d" fontSize="16" fontWeight="normal" lineHeight="18" textAlign="center">
    <modifier selected="true">
    <style color="#4778FF" fontWeight="500"/>
    </modifier>
  </style>
  <style id="SelectCustom__ImageWrapper" height="32" marginBottom="8" width="32"/>
  <style id="Select" marginTop="24"/>
  <style id="Select__RadioInner" borderRadius="5" height="10" marginLeft="3" marginTop="3" opacity="0" width="10">
    <modifier selected="true">
    <style backgroundColor="#4778ff" opacity="1"/>
    </modifier>
  </style>
  <style
    id="SelectCustom__Option"
    alignItems="center"
    borderColor="#BDC4C4"
    borderRadius="4"
    borderWidth="1"
    flex="1"
    justifyContent="flex-start"
    marginRight="8"
    padding="16">
    <modifier selected="true">
    <style borderColor="#4778FF"/>
    </modifier>
  </style>
  <style id="SelectCustom__Image" height="32" left="0" position="absolute" top="0" width="32"/>
  <style
    id="Select__Option"
    alignItems="center"
    flex="1"
    flexDirection="row"
    justifyContent="space-between"
    paddingBottom="16"
    paddingLeft="24"
    paddingRight="24"
    paddingTop="16"/>
  <style id="Select__Separator" borderTopColor="#e1e3e3" borderTopWidth="1" marginLeft="24" marginRight="24"/>
  <style
    id="SelectCustom"
    flex="1"
    flexDirection="row"
    marginBottom="40"
    marginLeft="24"
    marginRight="24"
    marginTop="24"/>
  <style id="SelectCustom__Image--Unselected">
    <modifier selected="true">
    <style height="0" width="0"/>
    </modifier>
  </style>
  <style id="SelectCustom__Image--Selected" height="0" width="0">
    <modifier selected="true">
    <style height="32" width="32"/>
    </modifier>
  </style>
  <style id="Select__Label" color="#4e4d4d" fontSize="16" fontWeight="normal" lineHeight="18">
    <modifier selected="true">
    <style color="#312f2f"/>
    </modifier>
    <modifier pressed="true">
    <style color="#312f2f"/>
    </modifier>
  </style>
  <style id="Select__RadioOuter" borderColor="#bdc4c4" borderRadius="10" borderWidth="1" height="20" width="20">
    <modifier pressed="true">
    <style borderColor="#8d9494" borderWidth="1"/>
    </modifier>
    <modifier selected="true">
    <style borderColor="#4778ff" borderWidth="2"/>
    </modifier>
  </style>

    </styles>
    <body style="Body" safe-area="true">
      <header style="Header">
        
          <text action="back" href="#" style="Header__Back">Back</text>
        
        <text style="Header__Title">Select Multiple</text>
        
      </header>
      
  <view scroll="true" style="Main">
    
  <view scroll="true" style="Main">
    <form>
      <text style="Description">Simple Select</text>
      <select-multiple name="choice1" style="Select">
        <view style="Select__Separator"/>
        <option style="Select__Option" value="paid_parking">
          <text style="Select__Label">Paid parking</text>
          <view style="Select__RadioOuter">
            <view style="Select__RadioInner"/>
          </view>
        </option>
        <view style="Select__Separator"/>
        <option style="Select__Option" value="free_parking">
          <text style="Select__Label">Free parking</text>
          <view style="Select__RadioOuter">
            <view style="Select__RadioInner"/>
          </view>
        </option>
        <view style="Select__Separator"/>
        <option style="Select__Option" value="unknown_parking">
          <text style="Select__Label">Unknown</text>
          <view style="Select__RadioOuter">
            <view style="Select__RadioInner"/>
          </view>
        </option>
        <view style="Select__Separator"/>
      </select-multiple>
      <text style="Description">Pre-selected</text>
      <select-multiple name="choice2" style="Select">
        <view style="Select__Separator"/>
        <option style="Select__Option" value="paid_parking">
          <text style="Select__Label">Paid parking</text>
          <view style="Select__RadioOuter">
            <view style="Select__RadioInner"/>
          </view>
        </option>
        <view style="Select__Separator"/>
        <option selected="true" style="Select__Option" value="free_parking">
          <text style="Select__Label">Free parking</text>
          <view style="Select__RadioOuter">
            <view style="Select__RadioInner"/>
          </view>
        </option>
        <view style="Select__Separator"/>
        <option selected="true" style="Select__Option" value="unknown_parking">
          <text style="Select__Label">Unknown</text>
          <view style="Select__RadioOuter">
            <view style="Select__RadioInner"/>
          </view>
        </option>
        <view style="Select__Separator"/>
      </select-multiple>
      <text style="Description">Custom</text>
      <select-multiple name="choice3" style="SelectCustom">
        <option style="SelectCustom__Option" value="paid_parking">
          <view style="SelectCustom__ImageWrapper">
            <image
              source="/ui_elements/forms/select_multiple/unselected.png"
              style="SelectCustom__Image SelectCustom__Image--Unselected"/>
            <image
              source="/ui_elements/forms/select_multiple/selected.png"
              style="SelectCustom__Image SelectCustom__Image--Selected"/>
          </view>
          <text style="SelectCustom__Label">Paid parking</text>
        </option>
        <option selected="true" style="SelectCustom__Option" value="free_parking">
          <view style="SelectCustom__ImageWrapper">
            <image
              source="/ui_elements/forms/select_multiple/unselected.png"
              style="SelectCustom__Image SelectCustom__Image--Unselected"/>
            <image
              source="/ui_elements/forms/select_multiple/selected.png"
              style="SelectCustom__Image SelectCustom__Image--Selected"/>
          </view>
          <text style="SelectCustom__Label">Free parking</text>
        </option>
        <option style="SelectCustom__Option" value="unknown_parking">
          <view style="SelectCustom__ImageWrapper">
            <image
              source="/ui_elements/forms/select_multiple/unselected.png"
              style="SelectCustom__Image SelectCustom__Image--Unselected"/>
            <image
              source="/ui_elements/forms/select_multiple/selected.png"
              style="SelectCustom__Image SelectCustom__Image--Selected"/>
          </view>
          <text style="SelectCustom__Label">Unknown</text>
        </option>
      </select-multiple>
      <view style="Button" href="/ui_elements/forms/select_multiple.xml">
        <text style="Button__Label">Serialize</text>
      </view>
    </form>
  </view>

  </view>

    </body>
  </screen>
  
