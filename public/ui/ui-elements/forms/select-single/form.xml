


<form id="form" xmlns="https://hyperview.org/hyperview">
  


  
    <text style="description">Simple Select</text>
  

<select-single name="simple-select-single" style="select">
  <view style="select-separator"/>
  <option style="Select__Option" value="paid_parking">
    <text style="select-label">Paid parking</text>
    <view style="select-radio-outer">
      <view style="select-radio-inner"/>
    </view>
  </option>
  <view style="select-separator"/>
  <option style="Select__Option" value="free_parking">
    <text style="select-label">Free parking</text>
    <view style="select-radio-outer">
      <view style="select-radio-inner"/>
    </view>
  </option>
  <view style="select-separator"/>
  <option style="Select__Option" value="unknown_parking">
    <text style="select-label">Unknown</text>
    <view style="select-radio-outer">
      <view style="select-radio-inner"/>
    </view>
  </option>
  <view style="select-separator"/>
</select-single>

  


  
    <text style="description">Pre Selected</text>
  

<select-single name="pre-selected-select-single" style="select">
  <view style="select-separator"/>
  <option style="Select__Option" value="paid_parking">
    <text style="select-label">Paid parking</text>
    <view style="select-radio-outer">
      <view style="select-radio-inner"/>
    </view>
  </option>
  <view style="select-separator"/>
  <option selected="true" style="Select__Option" value="free_parking">
    <text style="select-label">Free parking</text>
    <view style="select-radio-outer">
      <view style="select-radio-inner"/>
    </view>
  </option>
  <view style="select-separator"/>
  <option style="Select__Option" value="unknown_parking">
    <text style="select-label">Unknown</text>
    <view style="select-radio-outer">
      <view style="select-radio-inner"/>
    </view>
  </option>
  <view style="select-separator"/>
</select-single>

  


  
    <text style="description">Optional select</text>
  

<select-single name="optional-select-select-single" style="select" allow-deselect="true">
  <view style="select-separator"/>
  <option style="Select__Option" value="paid_parking">
    <text style="select-label">Paid parking</text>
    <view style="select-radio-outer">
      <view style="select-radio-inner"/>
    </view>
  </option>
  <view style="select-separator"/>
  <option style="Select__Option" value="free_parking">
    <text style="select-label">Free parking</text>
    <view style="select-radio-outer">
      <view style="select-radio-inner"/>
    </view>
  </option>
  <view style="select-separator"/>
  <option style="Select__Option" value="unknown_parking">
    <text style="select-label">Unknown</text>
    <view style="select-radio-outer">
      <view style="select-radio-inner"/>
    </view>
  </option>
  <view style="select-separator"/>
</select-single>

  


  
    <text style="description">Custom</text>
  

<select-single name="custom-select-single" style="select-custom">
  <option style="select-custom-option" value="paid_parking">
    <view style="select-custom-image-wrapper">
      <image
        source="/hyperview/public/ui/ui-elements/forms/select-single/unselected.png"
        style="select-custom-image select-custom-image-unselected"/>
      <image
        source="/hyperview/public/ui/ui-elements/forms/select-single/selected.png"
        style="select-custom-image select-custom-image-selected"/>
    </view>
    <text style="select-custom-label">Paid parking</text>
  </option>
  <option selected="true" style="select-custom-option" value="free_parking">
    <view style="select-custom-image-wrapper">
      <image
        source="/hyperview/public/ui/ui-elements/forms/select-single/unselected.png"
        style="select-custom-image select-custom-image-unselected"/>
      <image
        source="/hyperview/public/ui/ui-elements/forms/select-single/selected.png"
        style="select-custom-image select-custom-image-selected"/>
    </view>
    <text style="select-custom-label">Free parking</text>
  </option>
  <option style="select-custom-option" value="unknown_parking">
    <view style="select-custom-image-wrapper">
      <image
        source="/hyperview/public/ui/ui-elements/forms/select-single/unselected.png"
        style="select-custom-image select-custom-image-unselected"/>
      <image
        source="/hyperview/public/ui/ui-elements/forms/select-single/selected.png"
        style="select-custom-image select-custom-image-selected"/>
    </view>
    <text style="select-custom-label">Unknown</text>
  </option>
</select-single>


  
  
  
