<form id="myForm" scroll="true" xmlns="https://hyperview.org/hyperview">
  <view style="form-group">
    <text style="label">Label line</text>
    <text-field
      name="data"
      placeholder="Placeholder"
      placeholderTextColor="#8D9494"
      style="input input-error"
      value=""
    />
    <text style="help help-error">This input is required.</text>
  </view>
  <text
    action="replace"
    delay="500"
    href="/hyperview/public/advanced/case-studies/basic-forms/submit2.xml"
    show-during-load="mySpinner"
    style="submit"
    target="myForm"
  >
    Submit
  </text>
</form>
