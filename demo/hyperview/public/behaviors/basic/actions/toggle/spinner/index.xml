




  
    <text style="description">When toggling with delay, you can use indicators.</text>
  



  <view
    
    
      style="button"
    
  >
    
      <behavior
    action="toggle"
    delay="1000"
    show-during-load="toggle3-spinner"
    target="toggle3-content"
  />
  <view id="toggle3-spinner" hide="true" style="spinner">
    <spinner color="white" />
  </view>
    
    <text style="button-label">Toggle with Spinner</text>
  </view>


<text id="toggle3-content" style="toggle">Content to be toggled</text>
