permalink: "/ui/ui-elements/section-list/refresh/index.xml"
tags: "UI/UI Elements/Section List"
hv_title: "Section List with Refresh"
hv_button_behavior: "back"
---
{% extends 'templates/base.xml.njk' %}

{% block styles %}
  <style id="item-label-special" color="red"/>
{% endblock %}

{% block container %}
  <section-list action="replace" delay="700" href="/hyperview/public/ui/ui-elements/section-list/refresh/refresh_load.xml" trigger="refresh">
    <section-title style="list-header">
      <text style="list-header-text">Section 1</text>
    </section-title>
    {% for item in range(1, 6) %}
      <item key="{{ item }}" style="item{% if loop.last %} item-last{% endif %}">
        <text style="item-label">List {{ item }}</text>
      </item>
    {% endfor %}
  </section-list>
{% endblock %}
