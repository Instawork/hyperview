{% extends 'templates/base.xml.njk' %}

{% block container %}
  <section-list scroll-orientation="horizontal">
    <section-title style="list-header">
      <text style="list-header-text">Section 1</text>
    </section-title>
    {% for item in range(1, 20) %}
      <item key="{{ item }}" style="item">
        <text style="item-label">Item {{ item }}</text>
      </item>
    {% endfor %}

    <section-title style="list-header">
      <text style="list-header-text">Section 2</text>
    </section-title>
    {% for item in range(20, 41) %}
      <item key="{{ item }}" style="item">
        <text style="item-label">Item {{ item }}</text>
      </item>
    {% endfor %}
  </section-list>
{% endblock %}
