{% extends 'templates/base.xml.njk' %}

{% block container %}
  <list shows-scroll-indicator="false">
    {% for i in range(1, 21) %}
      <item key="{{ i }}" style="item{% if loop.last %} item-last{% endif %}">
        <text style="item-label">List {{ i }}</text>
      </item>
    {% endfor %}
  </list>
{% endblock %}
