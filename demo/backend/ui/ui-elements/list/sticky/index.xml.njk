{% extends 'templates/base.xml.njk' %}

{% block container %}
  <list>
    {% for i in range(1, 21) %}
      <item
        key="{{ i }}"
        style="item{% if loop.last %} item-last{% endif %}"
        {% if i == 2 or i == 4 %}
          sticky="true"
        {% endif %}
      >
        <text style="item-label">Item {{ i }}{{ ' (sticky)' if i == 2 or i == 4 }}</text>
      </item>
    {% endfor %}
  </list>
{% endblock %}
