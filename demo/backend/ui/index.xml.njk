---
permalink: "/ui/index.xml"
hv_title: "UI"
hv_tab_id: "ui"
hv_button_behavior: "none"
---
{% extends 'templates/tab-route.xml.njk' %}
{% from 'macros/tab/index.xml.njk' import tab, tab_bar %}

{% block tab_route_content %}
  {{ tab_bar([
  {label: "Styling", id: "tab-styling"},
  {label: "UI Elements", id: "tab-ui-elements"}
  ]) }}
  {% call tab("tab-styling") -%}
    {% include "./styling/index.xml.njk" %}
  {%- endcall %}
  {% call tab("tab-ui-elements") -%}
    {% include "./ui-elements/index.xml.njk" %}
  {%- endcall %}
  <behavior
    action="set-value"
    new-value="tab-styling"
    once="true"
    trigger="load"
    target="tab-bar"
  />
{% endblock %}
