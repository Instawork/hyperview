{% extends 'templates/scrollview.xml.njk' %}
{% from 'macros/description/index.xml.njk' import description %}
{% from 'macros/button/index.xml.njk' import button %}

{% block content %}
  {{ description('Tapping the button below will request an XML screen and push it onto the stack.') }}

  {% call button('Navigate forward') -%}
    <behavior action="navigate" href="/hyperview/public/navigation/behaviors/actions/pushed.xml" />
  {%- endcall %}

  {% call button('Navigate with indicator') -%}
    <behavior action="navigate" href="/hyperview/public/navigation/behaviors/actions/pushed.xml" show-during-load="loading-screen-pushed" />
  {%- endcall %}
{% endblock %}
