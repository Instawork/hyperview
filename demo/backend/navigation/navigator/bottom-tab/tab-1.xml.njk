hv_title: "Bottom Tab - Tab 1"
hv_button_behavior: "back"
---
{% from 'macros/description/index.xml.njk' import description %}
{% extends 'templates/base.xml.njk' %}

{% block styles %}
  {% include './_styles.xml.njk' %}
{% endblock %}

{% block container %}
  {{ description('This is the content for tab 1.') }}
  <view id="Footer" style="footer">
    <view
      style="bottom-tab bottom-tab-selected"
    >
      <image
        source="/hyperview/public/navigation/navigator/bottom-tab/heart2.png"
        style="bottom-tab-icon bottom-tab-selected"
      />
      <text style="bottom-tab-label bottom-tab-label-selected">Tab 1</text>
    </view>
    <view
      style="bottom-tab"
      href-style="bottom-tab"
      action="navigate"
      href="#tab-2"
    >
      <image
        source="/hyperview/public/navigation/navigator/bottom-tab/list2.png"
        style="bottom-tab-icon"
      />
      <text style="bottom-tab-label">Tab 2</text>
    </view>
  </view>
{% endblock %}
