{% extends 'templates/scrollview.xml.njk' %}

{% block styles %}
  <style
    id="form-group"
    flex="1"
    borderColor="#8D9494"
    borderRadius="12"
    borderWidth="1"
    marginLeft="24"
    marginRight="24"
    marginBottom="16"
    marginTop="8"
    padding="24"
  />
  <style
    id="input"
    borderBottomColor="#E1E1E1"
    borderBottomWidth="1"
    borderColor="#4E4D4D"
    flex="1"
    fontSize="16"
    fontWeight="normal"
    paddingBottom="8"
    paddingTop="8">
    <modifier pressed="true">
    <style borderBottomColor="green"/>
    </modifier>
    <modifier focused="true">
    <style borderBottomColor="#4778FF"/>
    </modifier>
  </style>
  <style
    id="tag"
    borderColor="#bdc4c4"
    borderRadius="32"
    borderWidth="1"
    marginBottom="8"
    marginRight="8"
    paddingBottom="8"
    paddingLeft="16"
    paddingRight="16"
    paddingTop="8">
    <modifier selected="true">
    <style backgroundColor="#4778ff" borderColor="white"/>
    </modifier>
  </style>
  <style id="input-text" fontSize="16" fontWeight="normal"></style>
  <style id="section" marginLeft="24" fontSize="18" fontWeight="bold" marginTop="8"/>
  <style
    id="tags"
    flex="1"
    flexDirection="row"
    flexWrap="wrap"
    justifyContent="flex-start"
    marginTop="8"
  />
  <style
    id="tag"
    borderColor="#bdc4c4"
    borderRadius="32"
    borderWidth="1"
    marginBottom="8"
    marginRight="8"
    paddingBottom="8"
    paddingLeft="16"
    paddingRight="16"
    paddingTop="8">
    <modifier selected="true">
    <style backgroundColor="#4778ff" borderColor="white"/>
    </modifier>
  </style>
  <style
    id="tag-label"
    color="#4e4d4d"
    fontSize="16"
    fontWeight="bold"
    lineHeight="18">
    <modifier selected="true">
    <style color="white"/>
    </modifier>
  </style>
  <style
    id="select-container"
    flexDirection="row"
    flexWrap="wrap"
    marginTop="12"
  />
  <style
    id="field-changed"
    color="green"
    fontWeight="bold"
    position="absolute"
    right="0"
    top="12"
  />
{% endblock %}

{% block content %}
  <view style="links-container">
    {% include './_set/index.xml.njk' %}
    {% include './_clear/index.xml.njk' %}
    {% include './_set-delay/index.xml.njk' %}
    {% include './_clear-delay/index.xml.njk' %}
    {% include './_set-indicator/index.xml.njk' %}
    {% include './_clear-indicator/index.xml.njk' %}
  </view>
  {% include './_text-field/index.xml.njk' %}
  {% include './_select-single/index.xml.njk' %}
  {% include './_picker-field/index.xml.njk' %}
  {% include './_date-field/index.xml.njk' %}
  {% include './_switch/index.xml.njk' %}
{% endblock %}
