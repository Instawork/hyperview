---
{% extends 'templates/scrollview.xml.njk' %}
{% from 'macros/button/index.xml.njk' import button %}
{% from 'macros/description/index.xml.njk' import description %}
{% from 'macros/container/index.xml.njk' import container %}

{% block content %}
  {% call description() -%}
    Tapping the button below will request an XML fragment and replace the container.
    Multiple indicators appear during loading.
  {%- endcall %}
  {% call button('Press me') -%}
    <behavior
      action="replace"
      href="/hyperview/public/behaviors/basic/target_sibling_fragment.xml"
      target="container"
      delay="300"
      show-during-load="myIndicator1 myIndicator2"
    />
  {%- endcall %}
  <spinner id="myIndicator1" hide="true" />
  {{ container('Waiting...', attributes={id:"container"}) }}
  <spinner id="myIndicator2" hide="true" />
{% endblock %}
