{% extends 'base.xml.njk' %}
{% block styles %}
  <style id="Flex" flex="1" flexDirection="row" justifyContent="space-between"/>
  <style id="main" flex="1"/>
{% endblock %}
{% block container %}
  <view style="main">
    <view style="Flex">
      <web-view url="https://hyperview.org/" show-loading-indicator="document-only"/>
    </view>
  </view>
{% endblock %}
