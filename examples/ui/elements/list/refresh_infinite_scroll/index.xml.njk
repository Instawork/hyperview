---

{% extends 'base.xml.njk' %}
{% block styles %}
  <style id="spinner" flex="1" flexDirection="row" justifyContent="center" padding="24"/>
{% endblock %}
{% block container %}
  <view
    action="replace"
    href="/ui/elements/list/refresh_infinite_scroll/refresh-infinite-scroll-fragment.xml"
    target="myList"
    trigger="refresh">
    <list id="myList">
      {% for i in range(1, 21) %}
        <item key="{{ i }}" style="item">
          <text style="item-label">List {{ i }}</text>
        </item>
      {% endfor %}
      <item key="page-2-loader" style="item">
        <behavior
          delay="300"
          trigger="visible"
          action="replace"
          once="true"
          href="/ui/elements/list/refresh_infinite_scroll/infinite-scroll-page2.xml"/>
        <view id="list-loading-indicator" style="spinner">
          <spinner/>
        </view>
      </item>
    </list>
  </view>
{% endblock %}
