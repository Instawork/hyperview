permalink: "/ui/elements/list/hidden_scroll_bar/index.xml"
tags: list
---

{% extends 'base.xml.njk' %}
{% block styles %}{% endblock %}
{% block container %}
  <list shows-scroll-indicator="false">
    {% for i in range(1, 15) %}
      <item key="{{ i }}" style="item">
        <text style="item-label">List {{ i }}</text>
      </item>
    {% endfor %}
  </list>
{% endblock %}
