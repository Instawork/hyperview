{% extends 'base.xml.njk' %}
{% block styles %}{% endblock %}
{% block container %}
  <list scroll-orientation="horizontal">
    {% for i in range(1, 18) %}
      <item key="{{ i }}" style="item">
        <text style="item-label">List {{ i }}</text>
      </item>
    {% endfor %}
  </list>
{% endblock %}
