---
permalink: "/ui/ui-elements/section-list/refresh/index.xml"
tags: "Section List"
hv_title: "Section List with Refresh"
hv_button_behavior: "back"
---
{% extends 'templates/base.xml.njk' %}

{% block styles %}
  <style
    id="list-header"
    alignItems="center"
    backgroundColor="#eee"
    flex="1"
    flexDirection="row"
    height="48"
    paddingLeft="24"
    paddingRight="24"/>
  <style id="item-label-special" color="red"/>
{% endblock %}

{% block container %}
  <section-list action="replace" delay="700" href="/ui/ui-elements/section-list/refresh/refresh_load.xml" trigger="refresh">
    <section-title style="list-header">
      <text style="list-header-text">Section 1</text>
    </section-title>
    {% for item in range(1, 6) %}
      <item key="{{ item }}" style="item">
        <text style="item-label">List {{ item }}</text>
      </item>
    {% endfor %}
  </section-list>
  <view id="myIndicator" hide="true" style="spinner">
    <spinner/>
  </view>
{% endblock %}
