{% extends 'templates/base.xml.njk' %}

{% block container %}
  {% block tab_content %}{% endblock %}
  <view id="footer" style="footer">
    <view
      href-style="bottom-tab"
      action="navigate"
      target="tab-ui"
      style="bottom-tab bottom-tab-selected"
    >
      {% if hv_tab_id === 'tab-ui' %}
        {% include 'icons/ui-selected.svg' %}
        <text style="bottom-tab-label bottom-tab-label-selected">UI</text>
      {% else %}
        {% include 'icons/ui.svg' %}
        <text style="bottom-tab-label">UI</text>
      {% endif %}
    </view>
    <view
      style="bottom-tab"
      href-style="bottom-tab"
      action="navigate"
      target="tab-behaviors"
    >
