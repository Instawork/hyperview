{# Base template that should be used for all screens. Shows the Header + back button #}
<doc xmlns="https://hyperview.org/hyperview">
  <screen>
    <styles>
      {% include 'styles.xml.njk' %}
      {% block styles %}
        <style
          id="Header__Switch"
          alignItems="center"
          flex="1"
          flexDirection="row"
          flexGrow="1"
          justifyContent="flex-end"
          columnGap="8"/>
        <style id="Switch__Label" fontSize="12" fontWeight="bold"/>
        <style id="image" height="40" width="40"/>
      {% endblock %}
    </styles>
    <body style="Body" safe-area="true">
      <header style="Header">
        {% if not hide_back_button %}
          <view action="back" href="#">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
  <path fill-rule="evenodd" clip-rule="evenodd" d="M11.7803 0.96967C12.0732 1.26256 12.0732 1.73744 11.7803 2.03033L2.56066 11.25H23.25C23.6642 11.25 24 11.5858 24 12C24 12.4142 23.6642 12.75 23.25 12.75H2.56066L11.7803 21.9697C12.0732 22.2626 12.0732 22.7374 11.7803 23.0303C11.4874 23.3232 11.0126 23.3232 10.7197 23.0303L0.21967 12.5303C-0.0732233 12.2374 -0.0732233 11.7626 0.21967 11.4697L10.7197 0.96967C11.0126 0.676777 11.4874 0.676777 11.7803 0.96967Z" fill="#4778FF"/>
</svg>
          </view>
        {% endif %}
        <text style="Header__Title">{{ title }}</text>
        {% if hyperview_toggle_enabled !== undefined %}
          <view style="Header__Switch">
            <text style="Switch__Label">Hyperview Navigator</text>
            <switch id="navigator-switch" trigger="change" action="set-navigator-source" xmlns:demo="https://hyperview.org/demo" demo:source={% if hyperview_toggle_enabled %} "external" {% else %} "hyperview" {% endif %} value={% if hyperview_toggle_enabled %} "on" {% else %} "off" {% endif %}/>
          </view>
        {% endif %}
      </header>
      {% block container %}{% endblock %}
    </body>
  </screen>
  {% include 'loading_screen.xml.njk' %}
</doc>
