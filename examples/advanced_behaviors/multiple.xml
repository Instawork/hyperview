<doc xmlns="https://hyperview.org/hyperview">
  <screen>
    <styles>
      <style
        id="Header"
        alignItems="center"
        backgroundColor="white"
        borderBottomColor="#eee"
        borderBottomWidth="1"
        flexDirection="row"
        paddingLeft="24"
        paddingRight="24"
        paddingBottom="16"
      />
      <style
        id="Header__Back"
        color="blue"
        fontSize="16"
        fontWeight="600"
        paddingRight="16"
      />
      <style id="Header__Title" color="black" fontSize="24" fontWeight="600" />
      <style id="Body" backgroundColor="white" flex="1" />
      <style
        id="Description"
        fontSize="16"
        fontWeight="normal"
        margin="24"
        marginBottom="0"
      />
      <style
        id="Item"
        alignItems="center"
        borderBottomColor="#eee"
        borderBottomWidth="1"
        flex="1"
        flexDirection="row"
        height="48"
        justifyContent="space-between"
        paddingLeft="24"
        paddingRight="24"
      />
      <style id="Item__Label" fontSize="18" fontWeight="normal" />
      <style id="Item__Chevron" fontSize="18" fontWeight="bold" />
      <style
        id="Button"
        backgroundColor="#63CB76"
        borderRadius="16"
        flexDirection="row"
        justifyContent="center"
        margin="24"
        padding="24"
      />
      <style id="Button__Label" color="white" fontSize="24" fontWeight="bold" />
      <style id="Main" />
    </styles>
    <body style="Body" safe-area="true">
      <header style="Header">
        <text action="back" href="#" style="Header__Back">Back</text>
        <text style="Header__Title">Multiple Behaviors</text>
      </header>
      <view style="Main">
        <text style="Description">
          The button below has behaviors for presses, refresh, and load.
        </text>
        <view style="Button">
          <behavior
            action="prepend"
            href="#pressin-fragment"
            target="container"
            trigger="pressIn"
          />
          <behavior
            action="prepend"
            href="#press-fragment"
            target="container"
            trigger="press"
          />
          <behavior
            action="prepend"
            href="#longpress-fragment"
            target="container"
            trigger="longPress"
          />
          <behavior
            action="prepend"
            href="#pressout-fragment"
            target="container"
            trigger="pressOut"
          />
          <behavior
            action="prepend"
            href="#refresh-fragment"
            target="container"
            trigger="refresh"
          />
          <behavior
            action="prepend"
            href="#load-fragment"
            target="container"
            trigger="load"
          />
          <behavior
            action="prepend"
            href="#visible-fragment"
            target="container"
            trigger="visible"
          />
          <text style="Button__Label">Press me</text>
        </view>
        <view id="container" scroll="true" />
        <view hide="true">
          <text id="pressin-fragment" style="Description">Press-in</text>
          <text id="press-fragment" style="Description">Press</text>
          <text id="pressout-fragment" style="Description">Press-out</text>
          <text id="longpress-fragment" style="Description">Long-press</text>
          <text id="refresh-fragment" style="Description">Refresh</text>
          <text id="load-fragment" style="Description">Load</text>
          <text id="visible-fragment" style="Description">Visible</text>
        </view>
      </view>
    </body>
  </screen>
</doc>
