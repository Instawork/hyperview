<doc xmlns="https://hyperview.org/hyperview">
  <screen>
    <styles>
      <style
        id="Header"
        alignItems="center"
        backgroundColor="white"
        borderBottomColor="#eee"
        borderBottomWidth="1"
        flexDirection="row"
        paddingLeft="24"
        paddingRight="24"
        paddingBottom="16"
      />
      <style
        id="Header__Back"
        color="blue"
        fontSize="16"
        fontWeight="600"
        paddingRight="16"
      />
      <style id="Header__Title" color="black" fontSize="24" fontWeight="600" />
      <style id="Body" backgroundColor="white" flex="1" />
      <style id="Contacts__List" margin="24" marginBottom="0" />
      <style id="Contacts__ListHeader" fontSize="20" marginBottom="16" />
      <style
        id="Description"
        fontSize="16"
        fontWeight="600"
        marginBottom="24"
      />
      <style
        id="Item"
        alignItems="center"
        borderBottomColor="#eee"
        borderBottomWidth="1"
        flex="1"
        flexDirection="row"
        height="48"
        justifyContent="space-between"
      />
      <style id="Item__Added" color="green" fontSize="18" fontWeight="normal" />
      <style id="Item__Add" color="blue" fontSize="18" fontWeight="normal" />
      <style id="Item__Label" fontSize="18" fontWeight="normal" />
      <style id="Item__Chevron" fontSize="18" fontWeight="bold" />
    </styles>
    <body style="Body" safe-area="true">
      <header style="Header">
        <text action="back" href="#" style="Header__Back">Back</text>
        <text style="Header__Title">Dispatch Events Multiple</text>
      </header>
      <view style="Contacts__List">
        <text style="Description">
          The items below will respond to different events for independent
          status updates.
        </text>
        <text style="Contacts__ListHeader">Contacts:</text>
        <list>
          <item
            key="1"
            style="Item"
            href="/advanced_behaviors/dispatch_events_multiple/item1.xml"
          >
            <text style="Item__Label">Jeeves</text>
            <text
              action="replace"
              event-name="added-item1"
              trigger="on-event"
              href="/advanced_behaviors/dispatch_events_multiple/_added.xml"
              style="Item__Add"
            >
              Add
            </text>
          </item>
          <item
            key="2"
            style="Item"
            href="/advanced_behaviors/dispatch_events_multiple/item2.xml"
          >
            <text style="Item__Label">Wooster</text>
            <text
              action="replace"
              event-name="added-item2"
              trigger="on-event"
              href="/advanced_behaviors/dispatch_events_multiple/_added.xml"
              style="Item__Add"
            >
              Add
            </text>
          </item>
          <item
            key="3"
            style="Item"
            href="/advanced_behaviors/dispatch_events_multiple/item3.xml"
          >
            <text style="Item__Label">Emsworth</text>
            <text
              action="replace"
              event-name="added-item3"
              trigger="on-event"
              href="/advanced_behaviors/dispatch_events_multiple/_added.xml"
              style="Item__Add"
            >
              Add
            </text>
          </item>
        </list>
      </view>
    </body>
  </screen>
</doc>
