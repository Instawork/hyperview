<doc xmlns="https://hyperview.org/hyperview"
     xmlns:ns1="https://instawork.com/hyperview-redux">
  <screen>
    <styles>
      <style alignItems="center"
             backgroundColor="white"
             borderBottomColor="#eee"
             borderBottomWidth="1"
             flexDirection="row"
             height="72"
             id="Header"
             paddingLeft="24"
             paddingRight="24"
             paddingTop="24" />
      <style color="blue"
             fontWeight="600"
             fontSize="16"
             id="Header__Back"
             paddingRight="16" />
      <style color="black"
             fontWeight="600"
             fontSize="24"
             id="Header__Title" />
      <style backgroundColor="white"
             flex="1"
             id="Body" />
      <style fontWeight="600"
             fontSize="16"
             id="Description"
             margin="24" />
      <style backgroundColor="#63CB76"
             borderRadius="16"
             flex="1"
             flexDirection="row"
             id="Button"
             justifyContent="center"
             margin="24"
             padding="24" />
      <style color="white"
             fontWeight="bold"
             fontSize="24"
             id="Button__Label" />
      <style flex="1"
             id="Main" />
    </styles>
    <body style="Body">
      <header style="Header">
        <text action="back"
              href="#"
              style="Header__Back">Back</text>
        <text style="Header__Title">Custom: Toast</text>
      </header>
      <view scroll="true"
            style="Main">
        <text style="Description">Examples of using Redux behaviors to show customized toasts.</text>
        <view style="Button">
          <behavior action="redux"
                    trigger="press"
                    ns1:action="TOAST/SHOW_TOAST"
                    ns1:extra="{&quot;payload&quot;:{&quot;toast&quot;:{&quot;colorScheme&quot;:&quot;positive&quot;,&quot;message&quot;:&quot;Hello World!&quot;}}}" />
          <text style="Button__Label">Success Toast</text>
        </view>
        <view style="Button">
          <behavior action="redux"
                    trigger="press"
                    ns1:action="TOAST/SHOW_TOAST"
                    ns1:extra="{&quot;payload&quot;:{&quot;toast&quot;:{&quot;colorScheme&quot;:&quot;neutral&quot;,&quot;message&quot;:&quot;Hello World!&quot;}}}" />
          <text style="Button__Label">Neutral Toast</text>
        </view>
        <view style="Button">
          <behavior action="redux"
                    trigger="press"
                    ns1:action="TOAST/SHOW_TOAST"
                    ns1:extra="{&quot;payload&quot;:{&quot;toast&quot;:{&quot;colorScheme&quot;:&quot;negative&quot;,&quot;message&quot;:&quot;Hello World!&quot;}}}" />
          <text style="Button__Label">Negative Toast</text>
        </view>
        <view style="Button">
          <behavior action="redux"
                    trigger="press"
                    ns1:action="TOAST/SHOW_TOAST"
                    ns1:extra="{&quot;payload&quot;:{&quot;toast&quot;:{&quot;colorScheme&quot;:&quot;negative&quot;,&quot;message&quot;:&quot;Hello World!&quot;,&quot;icon&quot;:&quot;gigs&quot;}}}" />
          <text style="Button__Label">Negative Toast with Icon</text>
        </view>
      </view>
    </body>
  </screen>
  <screen id="loadingScreen">
    <styles>
      <style alignItems="center"
             backgroundColor="white"
             borderBottomColor="#eee"
             borderBottomWidth="1"
             flexDirection="row"
             height="72"
             id="Header"
             paddingLeft="24"
             paddingRight="24"
             paddingTop="24" />
      <style color="blue"
             fontWeight="600"
             fontSize="16"
             id="Header__Back"
             paddingRight="16" />
      <style color="black"
             fontWeight="600"
             fontSize="24"
             id="Header__Title" />
      <style backgroundColor="white"
             flex="1"
             id="Body" />
    </styles>
    <body style="Body">
      <header style="Header">
        <text action="back"
              href="#"
              style="Header__Back">Back</text>
      </header>
    </body>
  </screen>
</doc>
