{% extends 'base.xml.njk' %}
{% block styles %}
  <style id="Event" fontSize="16" fontWeight="normal" margin="24" marginBottom="0"/>
{% endblock %}
{% block container %}
  <text style="Event">
    The button below has behaviors for presses, refresh, and load.
  </text>
  <view style="Button">
    <behavior action="prepend" href="#pressin-fragment" target="container" trigger="pressIn"/>
    <behavior action="prepend" href="#press-fragment" target="container" trigger="press"/>
    <behavior action="prepend" href="#longpress-fragment" target="container" trigger="longPress"/>
    <behavior action="prepend" href="#pressout-fragment" target="container" trigger="pressOut"/>
    <behavior action="prepend" href="#refresh-fragment" target="container" trigger="refresh"/>
    <behavior action="prepend" href="#load-fragment" target="container" trigger="load"/>
    <behavior action="prepend" href="#visible-fragment" target="container" trigger="visible"/>
    <text style="Button__Label">Press me</text>
  </view>
  <view id="container" scroll="true"/>
  <view hide="true">
    <text id="pressin-fragment" style="Event">Press-in</text>
    <text id="press-fragment" style="Event">Press</text>
    <text id="pressout-fragment" style="Event">Press-out</text>
    <text id="longpress-fragment" style="Event">Long-press</text>
    <text id="refresh-fragment" style="Event">Refresh</text>
    <text id="load-fragment" style="Event">Load</text>
    <text id="visible-fragment" style="Event">Visible</text>
  </view>
{% endblock %}
