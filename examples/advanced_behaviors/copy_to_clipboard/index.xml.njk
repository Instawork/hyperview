{% extends 'scrollview.xml.njk' %}
{% block content %}
  <text style="Description">
    Tapping the button below will copy the value "Hello World" to the clipboard.
  </text>
  <view
    action="copy-to-clipboard"
    trigger="press"
    copy-to-clipboard-value="Hello World"
    style="Button">
    <text style="Button__Label">Copy to clipboard</text>
  </view>
{% endblock %}
