<doc xmlns="https://hyperview.org/hyperview">
  <animated>
    <value from="0"
           id="title1Opacity"
           property="opacity" />
    <value from="0"
           id="title2Opacity"
           property="opacity" />
    <value from="0"
           id="title3Opacity"
           property="opacity" />
    <value from="-100"
           id="step1"
           property="left" />
    <value from="-100"
           id="step2"
           property="left" />
    <value from="-100"
           id="step3"
           property="left" />
    <value from="0"
           id="step1Label"
           property="opacity" />
    <value from="0"
           id="step2Label"
           property="opacity" />
    <value from="0"
           id="step3Label"
           property="opacity" />
    <value from="100"
           id="buttonPos"
           property="top" />
    <value from="0"
           id="buttonOpacity"
           property="opacity" />
    <animation id="intro"
               type="sequence">
      <animation type="parallel">
        <animation duration="1200"
                   to="1"
                   value="title1Opacity" />
        <animation delay="100"
                   duration="1200"
                   to="1"
                   value="title2Opacity" />
        <animation delay="200"
                   duration="1200"
                   to="1"
                   value="title3Opacity" />
      </animation>
      <animation duration="500"
                 easing="elastic"
                 to="0"
                 value="step1" />
      <animation duration="300"
                 to="1"
                 value="step1Label" />
      <animation duration="300"
                 type="delay" />
      <animation duration="500"
                 easing="elastic"
                 to="0"
                 value="step2" />
      <animation duration="300"
                 to="1"
                 value="step2Label" />
      <animation duration="300"
                 type="delay" />
      <animation duration="500"
                 easing="elastic"
                 to="0"
                 value="step3" />
      <animation duration="300"
                 to="1"
                 value="step3Label" />
      <animation duration="300"
                 type="delay" />
      <animation type="parallel">
        <animation duration="1500"
                   to="0"
                   value="buttonPos" />
        <animation delay="500"
                   duration="1000"
                   to="1"
                   value="buttonOpacity" />
      </animation>
    </animation>
  </animated>
  <screen>
    <styles>
      <style alignItems="center"
             backgroundColor="white"
             borderBottomColor="#eee"
             borderBottomWidth="1"
             flexDirection="row"
             height="72"
             id="Header"
             paddingLeft="24"
             paddingRight="24"
             paddingTop="24" />
      <style color="blue"
             fontFamily="HKGrotesk-SemiBold"
             fontSize="16"
             id="Header__Back"
             paddingRight="16" />
      <style color="black"
             fontFamily="HKGrotesk-SemiBold"
             fontSize="24"
             id="Header__Title" />
      <style backgroundColor="#63CB76"
             flex="1"
             id="Body" />
      <style fontFamily="HKGrotesk-Regular"
             fontSize="16"
             id="Description"
             margin="24"
             marginBottom="0" />
      <style alignItems="center"
             borderBottomColor="#eee"
             borderBottomWidth="1"
             flex="1"
             flexDirection="row"
             height="48"
             id="Item"
             justifyContent="space-between"
             paddingLeft="24"
             paddingRight="24" />
      <style fontFamily="HKGrotesk-Regular"
             fontSize="18"
             id="Item__Label" />
      <style fontFamily="HKGrotesk-Bold"
             fontSize="18"
             id="Item__Chevron" />
      <style id="hero"
             paddingBottom="16"
             paddingLeft="24"
             paddingRight="24"
             paddingTop="16" />
      <style color="white"
             fontFamily="HKGrotesk-Bold"
             fontSize="32"
             fontWeight="500"
             id="title"
             lineHeight="40" />
      <style color="#8D9494"
             fontFamily="HKGrotesk-SemiBold"
             fontSize="20"
             id="subtitle"
             lineHeight="24" />
      <style id="steps"
             marginTop="32" />
      <style alignItems="flex-start"
             flex="1"
             flexDirection="row"
             id="stepContainer"
             justifyContent="flex-start"
             marginBottom="24" />
      <style alignItems="center"
             borderColor="white"
             borderRadius="18"
             borderWidth="2"
             flex="0"
             height="36"
             id="step"
             justifyContent="center"
             width="36" />
      <style color="white"
             fontFamily="HKGrotesk-Bold"
             fontSize="24"
             id="stepNumber" />
      <style color="white"
             flex="1"
             fontFamily="HKGrotesk-Medium"
             fontSize="24"
             fontWeight="500"
             id="stepLabel"
             marginLeft="16" />
      <style alignItems="center"
             flex="1"
             flexDirection="row"
             id="contactsContainer"
             justifyContent="center" />
      <style alignItems="center"
             backgroundColor="white"
             borderRadius="24"
             flex="0"
             height="48"
             id="contactsButton"
             justifyContent="center"
             marginTop="24"
             paddingLeft="24"
             paddingRight="24" />
      <style color="#63CB76"
             fontFamily="HKGrotesk-SemiBold"
             fontSize="18"
             id="contactsButton__Text" />
      <style flex="1"
             id="Main" />
    </styles>
    <body style="Body">
      <header style="Header">
        <text action="back"
              href="#"
              style="Header__Back">Back</text>
        <text style="Header__Title">Combination</text>
      </header>
      <view scroll="1"
            style="Main">
        <view style="hero">
          <text animatedValues="title1Opacity"
                animations="intro"
                style="title">Earn $500</text>
          <text animatedValues="title2Opacity"
                animations="intro"
                style="title">when you refer</text>
          <text animatedValues="title3Opacity"
                animations="intro"
                style="title">a business</text>
          <view style="steps">
            <view animatedValues="step1"
                  animations="intro"
                  style="stepContainer">
              <view style="step">
                <text style="stepNumber">1</text>
              </view>
              <text animatedValues="step1Label"
                    animations="intro"
                    style="stepLabel">Text the code REFER29 to a business</text>
            </view>
            <view animatedValues="step2"
                  animations="intro"
                  style="stepContainer">
              <view style="step">
                <text style="stepNumber">2</text>
              </view>
              <text animatedValues="step2Label"
                    animations="intro"
                    style="stepLabel">The business signs up and posts a gig</text>
            </view>
            <view animatedValues="step3"
                  animations="intro"
                  style="stepContainer">
              <view style="step">
                <text style="stepNumber">3</text>
              </view>
              <text animatedValues="step3Label"
                    animations="intro"
                    style="stepLabel">You get a $500 credit to apply towards your gigs!</text>
            </view>
          </view>
          <view style="contactsContainer">
            <view animatedValues="buttonPos,buttonOpacity"
                  animations="intro"
                  style="contactsButton">
              <text style="contactsButton__Text">Refer a business</text>
            </view>
          </view>
        </view>
      </view>
    </body>
  </screen>
</doc>
