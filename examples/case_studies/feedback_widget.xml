<doc xmlns="https://hyperview.org/hyperview"
     xmlns:ns1="https://hyperview.org/hyperview-intercom">&gt; 
<screen>
  <styles>
    <style alignItems="center"
           backgroundColor="white"
           flexDirection="row"
           height="72"
           id="Header"
           paddingLeft="24"
           paddingRight="24"
           paddingTop="24" />
    <style height="19"
           id="Header__Back"
           marginRight="16"
           width="24" />
    <style color="black"
           fontFamily="HKGrotesk-SemiBold"
           fontSize="24"
           id="Header__Title" />
    <style backgroundColor="white"
           flex="1"
           id="Body" />
    <style backgroundColor="white"
           flex="1"
           id="Main" />
    <style id="Compliments"
           flexDirection="row"
           flexWrap="wrap"
           margin="16" />
    <style id="Compliment"
           borderRadius="16"
           backgroundColor="#63cb76"
           paddingTop="8"
           paddingBottom="8"
           paddingLeft="16"
           paddingRight="16"
           marginRight="16"
           marginBottom="16"
           flexDirection="row"
           alignItems="center" />
    <style id="Compliment--Good"
           backgroundColor="#63cb76" />
    <style id="Compliment--Bad"
           backgroundColor="#ff4847" />
    <style id="Compliment__Label"
           color="white"
           fontFamily="HKGrotesk-SemiBold"
           fontSize="16" />
    <style id="Compliment__Badge"
           backgroundColor="white"
           borderRadius="16"
           padding="4"
           width="24"
           marginLeft="8"
           flex="0" />
    <style id="Compliment__BadgeLabel"
           color="#4e4d4d"
           fontFamily="HKGrotesk-SemiBold"
           fontSize="12"
           textAlign="center" />
    <style id="FeedbackContainer"
           flex="1"
           height="140"
           paddingBottom="8" />
    <style id="FeedbackContainer__Extra"
           flexDirection="row" />
    <style id="Feedback"
           borderRadius="8"
           borderWidth="1"
           borderColor="#e1e1e1"
           padding="16"
           width="200"
           marginLeft="16"
           flex="1" />
    <style flex="1"
           flexDirection="row"
           id="Spinner"
           justifyContent="center"
           padding="24" />
  </styles>
  <body style="Body">
    <header style="Header">
      <image action="back"
             href="/case_studies/index.xml"
             source="/case_studies/back@2x.png"
             style="Header__Back" />
      <text style="Header__Title">Feedback Widget</text>
    </header>
    <view scroll="true"
          style="Main">
      <view style="Compliments">
        <view style="Compliment Compliment--Good">
          <text style="Compliment__Label">Punctual</text>
          <view style="Compliment__Badge">
            <text style="Compliment__BadgeLabel">2</text>
          </view>
        </view>
        <view style="Compliment Compliment--Good">
          <text style="Compliment__Label">Professional</text>
          <view style="Compliment__Badge">
            <text style="Compliment__BadgeLabel">10</text>
          </view>
        </view>
        <view style="Compliment Compliment--Good">
          <text style="Compliment__Label">Tidy</text>
          <view style="Compliment__Badge">
            <text style="Compliment__BadgeLabel">4</text>
          </view>
        </view>
        <view style="Compliment Compliment--Good">
          <text style="Compliment__Label">Correct Attire</text>
          <view style="Compliment__Badge">
            <text style="Compliment__BadgeLabel">6</text>
          </view>
        </view>
        <view style="Compliment Compliment--Good">
          <text style="Compliment__Label">Stayed Late</text>
          <view style="Compliment__Badge">
            <text style="Compliment__BadgeLabel">1</text>
          </view>
        </view>
      </view>
      <view id="feedback"
            style="FeedbackContainer"
            scroll="true"
            scroll-orientation="horizontal">
        <view style="Feedback">
          <text style="Feedback__Label">Bill did a great job! Good attitude, worked hard, would love to have him back.</text>
        </view>
        <view style="Feedback">
          <text style="Feedback__Label">Bill did a great job! Good attitude, worked hard, would love to have him back.</text>
        </view>
        <view style="Feedback"
              action="append"
              delay="1000"
              href="#more-feedback"
              target="feedback"
              once="true"
              show-during-load="indicator"
              trigger="visible">
          <text style="Feedback__Label">Bill did a great job! Good attitude, worked hard, would love to have him back.</text>
        </view>
        <view hide="true"
              id="indicator"
              style="Spinner">
          <spinner />
        </view>
      </view>
      <view style="Compliments">
        <view style="Compliment Compliment--Bad">
          <text style="Compliment__Label">Punctual</text>
          <view style="Compliment__Badge">
            <text style="Compliment__BadgeLabel">2</text>
          </view>
        </view>
        <view style="Compliment Compliment--Bad">
          <text style="Compliment__Label">Professional</text>
          <view style="Compliment__Badge">
            <text style="Compliment__BadgeLabel">10</text>
          </view>
        </view>
        <view style="Compliment Compliment--Bad">
          <text style="Compliment__Label">Tidy</text>
          <view style="Compliment__Badge">
            <text style="Compliment__BadgeLabel">4</text>
          </view>
        </view>
        <view style="Compliment Compliment--Bad">
          <text style="Compliment__Label">Correct Attire</text>
          <view style="Compliment__Badge">
            <text style="Compliment__BadgeLabel">6</text>
          </view>
        </view>
        <view style="Compliment Compliment--Bad">
          <text style="Compliment__Label">Stayed Late</text>
          <view style="Compliment__Badge">
            <text style="Compliment__BadgeLabel">1</text>
          </view>
        </view>
      </view>
    </view>
  </body>
</screen>
<view id="more-feedback"
      style="FeedbackContainer__Extra">
  <view style="Feedback">
    <text style="Feedback__Label">Something else was added :)</text>
  </view>
  <view style="Feedback">
    <text style="Feedback__Label">Something else was added :)</text>
  </view>
  <view style="Feedback">
    <text style="Feedback__Label">Something else was added :)</text>
  </view>
</view></doc>
