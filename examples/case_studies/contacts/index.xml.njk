{% extends 'base.xml.njk' %}
{% block styles %}
  <style id="flex" flex="1" />
  <style
    id="input"
    borderBottomColor="#E1E1E1"
    borderBottomWidth="1"
    borderColor="#4E4D4D"
    fontSize="16"
    fontWeight="normal"
    paddingBottom="8"
    paddingTop="8">
    <modifier pressed="true">
      <style borderBottomColor="green"/>
    </modifier>
    <modifier focused="true">
      <style borderBottomColor="#4778FF"/>
    </modifier>
  </style>
  <style id="relative" position="relative" />
  <style id="absolute" position="absolute" />
  <style id="r-0" right="0" />
  <style id="mx-24" marginHorizontal="24" />
  <style id="py-8" paddingVertical="8" />
  <style id="border-bottom" borderBottomWidth="1" borderBottomColor="lightgray" />
  <style id="highlight" fontWeight="bold" color="blue" />
{% endblock %}
{% block container %}
  <form style="relative mx-24">
    <text-field
      placeholder="Search a contactâ€¦"
      placeholderTextColor="#8D9494"
      name="search"
      style="input"
    >
      {# upon the search field changing, we want to: #}
      {# 1- prevent any further load more on scroll with the previous request query to happen #}
      {# 2- actually refresh the list with new set of results, including the new "load more" behavior #}
      <behavior
        trigger="change"
        action="hide"
        target="load-more"
      />
      <behavior
        trigger="change"
        action="replace"
        target="contacts"
        href="?template=list"
        show-during-load="loading-indicator"
      />
    </text-field>
    <view id="loading-indicator" style="absolute r-0 py-8" hide="true">
      <spinner />
    </view>
  </form>
  {% include "./list.xml.njk" %}
{% endblock %}
