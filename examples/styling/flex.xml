<doc xmlns="https://hyperview.org/hyperview">
  <screen>
    <styles>
      <style id="Header"
             alignItems="center"
             backgroundColor="white"
             borderBottomColor="#eee"
             borderBottomWidth="1"
             flexDirection="row"
             height="72"
             paddingLeft="24"
             paddingRight="24"
             paddingTop="24" />
      <style id="Header__Back"
             color="blue"
             fontSize="16"
             fontWeight="600"
             paddingRight="16" />
      <style id="Header__Title"
             color="black"
             fontSize="24"
             fontWeight="600" />
      <style id="Body"
             backgroundColor="white"
             flex="1" />
      <style id="Description"
             fontSize="16"
             fontWeight="600"
             margin="24" />
      <style id="Item"
             alignItems="center"
             borderBottomColor="#eee"
             borderBottomWidth="1"
             flex="1"
             flexDirection="row"
             height="48"
             justifyContent="space-between"
             paddingLeft="24"
             paddingRight="24" />
      <style id="Item__Label"
             fontSize="18"
             fontWeight="normal" />
      <style id="Item__Chevron"
             fontSize="18"
             fontWeight="bold" />
      <style id="FlexContainer"
             borderColor="#e1e1e1"
             borderRadius="8"
             borderWidth="2"
             flex="1"
             marginLeft="24"
             marginRight="24"
             padding="8" />
      <style id="FlexChild"
             backgroundColor="#63CB76"
             borderRadius="8"
             height="32"
             margin="8"
             width="32" />
      <style id="FlexHorizontal"
             flexDirection="row"
             height="64" />
      <style id="FlexHorizontal--Large"
             height="128" />
      <style id="FlexVertical"
             flexDirection="column"
             height="300"
             width="64" />
      <style id="FlexVertical--Large"
             width="128" />
      <style id="FlexJustifyEnd"
             justifyContent="flex-end" />
      <style id="FlexJustifyCenter"
             justifyContent="center" />
      <style id="FlexAlignEnd"
             alignItems="flex-end" />
      <style id="FlexAlignCenter"
             alignItems="center" />
      <style id="Main"
             flex="1" />
    </styles>
    <body style="Body">
      <header style="Header">
        <text action="back"
              href="#"
              style="Header__Back">Back</text>
        <text style="Header__Title">Flex Styling</text>
      </header>
      <view scroll="1"
            style="Main">
        <text style="Description">Flex Horizontal</text>
        <view style="FlexContainer FlexHorizontal">
          <view style="FlexChild" />
          <view style="FlexChild" />
          <view style="FlexChild" />
        </view>
        <text style="Description">Flex Horizontal Justify End</text>
        <view style="FlexContainer FlexHorizontal FlexJustifyEnd">
          <view style="FlexChild" />
          <view style="FlexChild" />
          <view style="FlexChild" />
        </view>
        <text style="Description">Flex Horizontal Justify Center</text>
        <view style="FlexContainer FlexHorizontal FlexJustifyCenter">
          <view style="FlexChild" />
          <view style="FlexChild" />
          <view style="FlexChild" />
        </view>
        <text style="Description">Flex Horizontal Justify Center Align End</text>
        <view style="FlexContainer FlexHorizontal FlexHorizontal--Large FlexJustifyCenter FlexAlignEnd">
          <view style="FlexChild" />
          <view style="FlexChild" />
          <view style="FlexChild" />
        </view>
        <text style="Description">Flex Horizontal Justify Center Align Center</text>
        <view style="FlexContainer FlexHorizontal FlexHorizontal--Large FlexJustifyCenter FlexAlignCenter">
          <view style="FlexChild" />
          <view style="FlexChild" />
          <view style="FlexChild" />
        </view>
        <text style="Description">Flex Vertical</text>
        <view style="FlexContainer FlexVertical">
          <view style="FlexChild" />
          <view style="FlexChild" />
          <view style="FlexChild" />
        </view>
        <text style="Description">Flex Vertical Justify End</text>
        <view style="FlexContainer FlexVertical FlexJustifyEnd">
          <view style="FlexChild" />
          <view style="FlexChild" />
          <view style="FlexChild" />
        </view>
        <text style="Description">Flex Vertical Justify Center</text>
        <view style="FlexContainer FlexVertical FlexJustifyCenter">
          <view style="FlexChild" />
          <view style="FlexChild" />
          <view style="FlexChild" />
        </view>
        <text style="Description">Flex Vertical Justify Center Align End</text>
        <view style="FlexContainer FlexVertical FlexVertical--Large FlexJustifyCenter FlexAlignEnd">
          <view style="FlexChild" />
          <view style="FlexChild" />
          <view style="FlexChild" />
        </view>
        <text style="Description">Flex Vertical Justify Center Align Center</text>
        <view style="FlexContainer FlexVertical FlexVertical--Large FlexJustifyCenter FlexAlignCenter">
          <view style="FlexChild" />
          <view style="FlexChild" />
          <view style="FlexChild" />
        </view>
      </view>
    </body>
  </screen>
</doc>
