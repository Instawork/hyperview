<doc xmlns="https://hyperview.org/hyperview">
  <screen>
    <styles>
      <style
        id="Header"
        alignItems="center"
        backgroundColor="white"
        borderBottomColor="#eee"
        borderBottomWidth="1"
        flexDirection="row"
        paddingLeft="24"
        paddingRight="24"
        paddingBottom="16"
      />
      <style
        id="Header__Back"
        color="blue"
        fontSize="16"
        fontWeight="600"
        paddingRight="16"
      />
      <style id="Header__Title" color="black" fontSize="24" fontWeight="600" />
      <style id="Body" backgroundColor="white" flex="1" />
      <style
        id="Description"
        borderColor="red"
        borderRadius="4"
        borderWidth="2"
        fontSize="16"
        fontWeight="600"
        margin="24"
        padding="16"
      />
      <style
        id="Item"
        alignItems="center"
        borderBottomColor="#eee"
        borderBottomWidth="1"
        flex="1"
        flexDirection="row"
        height="48"
        justifyContent="space-between"
        paddingLeft="24"
        paddingRight="24"
      />
      <style id="Item__Left" flex="1" flexDirection="row" />
      <style id="Item__Label" fontSize="18" fontWeight="normal" />
      <style
        id="Item__Label--WIP"
        backgroundColor="#FBB90E"
        color="white"
        fontSize="12"
        fontWeight="bold"
        lineHeight="24"
        marginLeft="8"
        paddingLeft="4"
        paddingRight="4"
      />
      <style id="Item__Chevron" fontSize="18" fontWeight="bold" />
    </styles>
    <body style="Body" safe-area="true">
      <header style="Header">
        <text action="back" href="#" style="Header__Back">Back</text>
        <text style="Header__Title">Forms</text>
      </header>
      <list>
        <item
          href="/ui_elements/forms/text_input.xml"
          key="text_input"
          show-during-load="loadingScreen"
          style="Item"
        >
          <view style="Item__Left">
            <text style="Item__Label">Text Input</text>
          </view>
          <text style="Item__Chevron">&gt;</text>
        </item>
        <item
          href="/ui_elements/forms/select_single.xml"
          key="select_single"
          show-during-load="loadingScreen"
          style="Item"
        >
          <view style="Item__Left">
            <text style="Item__Label">Select Single</text>
          </view>
          <text style="Item__Chevron">&gt;</text>
        </item>
        <item
          href="/ui_elements/forms/select_multiple.xml"
          key="select_multiple"
          show-during-load="loadingScreen"
          style="Item"
        >
          <view style="Item__Left">
            <text style="Item__Label">Select Multiple</text>
          </view>
          <text style="Item__Chevron">&gt;</text>
        </item>
        <item
          href="/ui_elements/forms/picker.xml"
          key="picker"
          show-during-load="loadingScreen"
          style="Item"
        >
          <view style="Item__Left">
            <text style="Item__Label">Picker</text>
          </view>
          <text style="Item__Chevron">&gt;</text>
        </item>
        <item
          href="/ui_elements/forms/date_field.xml"
          key="date_field"
          show-during-load="loadingScreen"
          style="Item"
        >
          <view style="Item__Left">
            <text style="Item__Label">Date field</text>
          </view>
          <text style="Item__Chevron">&gt;</text>
        </item>
        <item
          href="/ui_elements/forms/switch.xml"
          key="switch"
          show-during-load="loadingScreen"
          style="Item"
        >
          <view style="Item__Left">
            <text style="Item__Label">Switch</text>
          </view>
          <text style="Item__Chevron">&gt;</text>
        </item>
      </list>
    </body>
  </screen>
  <screen id="loadingScreen">
    <styles>
      <style
        id="Header"
        alignItems="center"
        backgroundColor="white"
        borderBottomColor="#eee"
        borderBottomWidth="1"
        flexDirection="row"
        paddingLeft="24"
        paddingRight="24"
        paddingBottom="16"
      />
      <style
        id="Header__Back"
        color="blue"
        fontSize="16"
        fontWeight="600"
        paddingRight="16"
      />
      <style id="Header__Title" color="black" fontSize="24" fontWeight="600" />
      <style id="Body" backgroundColor="white" flex="1" />
    </styles>
    <body style="Body" safe-area="true">
      <header style="Header">
        <text action="back" href="#" style="Header__Back">Back</text>
      </header>
    </body>
  </screen>
</doc>
