{% extends 'scrollview.xml.njk' %}
{% block styles %}
  <style
    id="Border"
    borderColor="#e1e1e1"
    borderWidth="1"
    flex="1"
    margin="24"
    padding="8"
  />
  <style
    id="Styled"
    backgroundColor="#63CB76"
    borderRadius="16"
    height="40"
  />
  <style
    id="Flex"
    flex="1"
    flexDirection="row"
    justifyContent="space-between"
  />
  <style id="Flex__Child" width="40" />
{% endblock %}

{% block content %}
  <text style="Description">View</text>
  <view style="Border" />
  <text style="Description">Nested Views</text>
  <view style="Border">
    <view style="Border">
      <view style="Border" />
    </view>
  </view>
  <text style="Description">Styled</text>
  <view style="Border Styled" />
  <text style="Description">Flex</text>
  <view style="Border Flex">
    <view style="Flex__Child Styled" />
    <view style="Flex__Child Styled" />
    <view style="Flex__Child Styled" />
  </view>
{% endblock %}
