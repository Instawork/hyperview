tags: "Indicators"
hv_title: "Hide Multiple Indicators"
hv_button_behavior: "back"
---
{% extends 'scrollview.xml.njk' %}
{% from 'macros/button/index.xml.njk' import button %}
{% from 'macros/description/index.xml.njk' import description %}
{% from 'macros/container/index.xml.njk' import container %}

{% block content %}
  {% call description() -%}
    Tapping the button below will request an XML fragment and replace the
    container. Multiple indicators disappear during loading.
  {%- endcall %}
  {% call button('Press me') -%}
    <behavior
      action="replace"
      href="/behaviors/basic/_target_sibling_fragment.xml"
      target="container"
      delay="300"
      hide-during-load="myIndicator1 myIndicator2"
    />
  {%- endcall %}
  <text id="myIndicator1" style="description">Loaded!</text>
  {{ container('', attributes={id:"container"}) }}
  <text id="myIndicator2" style="description">Loaded!</text>
{% endblock %}
