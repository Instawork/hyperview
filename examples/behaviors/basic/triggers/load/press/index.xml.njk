{% from 'macros/button/index.xml.njk' import button %}
{% from 'macros/description/index.xml.njk' import description %}

{{ description('Pressing the button below will request and load a fragment that navigates back on load. This can be used when submitting forms that should dismiss a modal.') }}

{% call button('Press me') -%}
  <behavior
    action="replace"
    delay="300"
    href="/behaviors/basic/triggers/load/press/_load_navigate_back.xml"
    show-during-load="saving"
  />
{%- endcall %}
<spinner id="saving" hide="true" />
