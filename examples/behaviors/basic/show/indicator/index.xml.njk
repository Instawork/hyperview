{% import 'macros.nj' as macros %}

{{ macros.description('When showing with delay, you can use indicators.') }}

{% call macros.button('Show with Spinner') -%}
  <behavior action="show" target="show3-content" delay="1000" show-during-load="show3-spinner" />
  <view id="show3-spinner" hide="true" style="spinner">
    <spinner color="white" />
  </view>
{%- endcall %}
<text id="show3-content" style="show" hide="true">Content to be hidden</text>
