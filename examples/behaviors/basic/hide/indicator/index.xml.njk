{% import 'macros.nj' as macros %}

{{ macros.description('When hiding with delay, you can use indicators.') }}

{% call macros.button('Hide with Spinner') -%}
  <behavior action="hide" target="hide3-content" delay="1000" show-during-load="hide3-spinner" />
  <view id="hide3-spinner" hide="true" style="spinner">
    <spinner color="white" />
  </view>
{%- endcall %}
<text id="hide3-content" style="hide">Content to be hidden</text>
