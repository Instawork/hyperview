{% extends 'scrollview.xml.njk' %}
{% import 'macros.nj' as macros %}


{% block styles %}
  {% include './on-load/style.xml.njk' %}
{% endblock %}

{% block content %}
  {% include './on-load/index.xml.njk' %}
  {% include './press/index.xml.njk' %}
{% endblock %}
<view scroll="1" style="Main">
        <text style="Description">
          A hidden view below will automatically trigger a request and load the
          content into the container.
        </text>
        <view
          action="replace"
          delay="300"
          href="/behaviors/_target_sibling_fragment.xml"
          show-during-load="myIndicator"
          target="container"
          trigger="load"
        >
          <text style="Button__Label">Auto</text>
        </view>
        <spinner id="myIndicator" hide="true" />
        <view id="container" style="Container" />
        <text style="Description">
          Pressing the button below will request and load a fragment that
          navigates back on load. This can be used when submitting forms that
          should dismiss a modal.
        </text>
        <view
          action="replace"
          delay="300"
          href="/behaviors/_load_navigate_back.xml"
          show-during-load="saving"
          style="Button"
        >
          <text style="Button__Label">Press me</text>
        </view>
        <spinner id="saving" hide="true" />
      </view>
