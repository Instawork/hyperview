---
permalink: "/advanced/index.xml"
hv_title: "Advanced"
hv_tab_id: "tab-advanced"
hv_button_behavior: "none"
---
{% extends 'templates/tab-route.xml.njk' %}
{% from 'macros/tab/index.xml.njk' import tab %}

{% block styles %}
  <style
    id="row"
    backgroundColor="#eee"
    borderRadius="12"
    flexDirection="row"
    justifyContent="space-between"
    marginBottom="24"
    marginHorizontal="24"
    padding="2"
  />
  <style
    id="tab"
    alignItems="center"
    borderColor="transparent"
    borderRadius="8"
    borderWidth="1"
    flex="1"
    padding="8"
    justifyContent="center"
  >
    <modifier selected="true">
    <style
    backgroundColor="white"
    elevation="2"
    shadowColor="black"
    shadowOffsetX="0"
    shadowOffsetY="2"
    shadowOpacity="0.1"
    shadowRadius="2"
    />
    </modifier>
  </style>
  <style id="tab-label" fontSize="16" fontWeight="500" lineHeight="24" />
{% endblock %}

{% block tab_route_content %}
  <select-single id="tabs" name="tabs" style="row">
    <option value="1" style="tab">
      <behavior trigger="deselect" action="hide" target="tab-case-studies" />
      <behavior trigger="select" action="show" target="tab-case-studies" />
      <text style="tab-label">Case Studies</text>
    </option>
    <option value="2" style="tab">
      <behavior trigger="deselect" action="hide" target="tab-custom-components" />
      <behavior trigger="select" action="show" target="tab-custom-components" />
      <text style="tab-label">Custom Components</text>
    </option>
  </select-single>
  {% call tab("tab-case-studies") -%}
    {% include "./case-studies/index.xml.njk" %}
  {%- endcall %}
  {% call tab("tab-custom-components") -%}
    {% include "./custom-components/index.xml.njk" %}
  {%- endcall %}
  <behavior
    action="set-value"
    new-value="1"
    once="true"
    trigger="load"
    target="tabs"
  />
{% endblock %}
