<doc xmlns="https://hyperview.org/hyperview">
  <screen>
    <styles>
      <style
        id="Header"
        alignItems="center"
        backgroundColor="white"
        borderBottomColor="#eee"
        borderBottomWidth="1"
        flexDirection="row"
        paddingLeft="24"
        paddingRight="24"
        paddingBottom="16"
      />
      <style
        id="Header__Back"
        color="blue"
        fontSize="16"
        fontWeight="600"
        paddingRight="16"
      />
      <style id="Header__Title" color="black" fontSize="24" fontWeight="600" />
      <style id="Body" backgroundColor="white" flex="1" />
      <style
        id="Description"
        fontSize="16"
        fontWeight="normal"
        margin="24"
        marginBottom="0"
      />
      <style
        id="Item"
        alignItems="center"
        borderBottomColor="#eee"
        borderBottomWidth="1"
        flex="1"
        flexDirection="row"
        height="48"
        justifyContent="space-between"
        paddingLeft="24"
        paddingRight="24"
      />
      <style id="Item__Label" fontSize="18" fontWeight="normal" />
      <style id="Item__Chevron" fontSize="18" fontWeight="bold" />
      <style
        id="Button"
        backgroundColor="#63CB76"
        borderRadius="16"
        flex="1"
        flexDirection="row"
        justifyContent="center"
        margin="24"
        padding="24"
      />
      <style id="Button__Label" color="white" fontSize="24" fontWeight="bold" />
    </styles>
    <body style="Body" safe-area="true">
      <view scroll="true">
        <header style="Header">
          <text action="close" href="/navigation/new.xml" style="Header__Back">
            Close
          </text>
          <text style="Header__Title">Opened</text>
        </header>
        <text style="Description">Opened a new modal screen!</text>
        <view action="new" href="/navigation/modal.xml" style="Button">
          <text style="Button__Label">Open another modal</text>
        </view>
        <view action="push" href="/navigation/modal.xml" style="Button">
          <text style="Button__Label">Push on the stack</text>
        </view>
      </view>
    </body>
  </screen>
</doc>
