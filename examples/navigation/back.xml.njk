{% extends 'scrollview.xml.njk' %}
{% block content %}
  <text style="Description">
    Tapping the button below will navigate back to the previous screen..
  </text>
  <view action="back" href="/navigation/index.xml" style="Button">
    <text style="Button__Label">Back</text>
  </view>
  <text style="Description">
    Tapping the button below will navigate back to a different screen
  </text>
  <view action="back" delay="200" href="/navigation/changed.xml" style="Button">
    <text style="Button__Label">Back to other</text>
  </view>
  <text style="Description">
    Tapping the button below will navigate back to a different screen, with preload state
  </text>
  <view action="back" delay="500" href="/navigation/changed.xml" show-during-load="loadingScreen" style="Button">
    <text style="Button__Label">Back with loading</text>
  </view>
{% endblock %}
