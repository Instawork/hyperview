<doc xmlns="https://hyperview.org/hyperview">
  <screen>
    <styles>
      <style alignItems="center"
             backgroundColor="white"
             borderBottomColor="#eee"
             borderBottomWidth="1"
             flexDirection="row"
             height="72"
             id="Header"
             paddingLeft="24"
             paddingRight="24"
             paddingTop="24" />
      <style color="blue"
             fontWeight="600"
             fontSize="16"
             id="Header__Back"
             paddingRight="16" />
      <style color="black"
             fontWeight="600"
             fontSize="24"
             id="Header__Title" />
      <style backgroundColor="white"
             flex="1"
             id="Body" />
      <style fontWeight="normal"
             fontSize="16"
             id="Description"
             margin="24"
             marginBottom="0" />
      <style alignItems="center"
             borderBottomColor="#eee"
             borderBottomWidth="1"
             flex="1"
             flexDirection="row"
             height="48"
             id="Item"
             justifyContent="space-between"
             paddingLeft="24"
             paddingRight="24" />
      <style fontWeight="normal"
             fontSize="18"
             id="Item__Label" />
      <style fontWeight="bold"
             fontSize="18"
             id="Item__Chevron" />
      <style backgroundColor="#63CB76"
             borderRadius="16"
             flex="1"
             flexDirection="row"
             id="Button"
             justifyContent="center"
             margin="24"
             padding="24" />
      <style color="white"
             fontWeight="bold"
             fontSize="24"
             id="Button__Label" />
    </styles>
    <body scroll="true"
          style="Body">
      <header style="Header">
        <text action="close"
              href="#"
              style="Header__Back">Close</text>
        <text style="Header__Title">Close</text>
      </header>
      <text style="Description">Tapping the button below will navigate back to the previous screen..</text>
      <view action="close"
            href="/navigation/index.xml"
            style="Button">
        <text style="Button__Label">Close</text>
      </view>
      <text style="Description">Tapping the button below will navigate back to a different screen</text>
      <view action="close"
            href="/navigation/changed.xml"
            delay="200"
            style="Button">
        <text style="Button__Label">Close to other</text>
      </view>
      <text style="Description">Tapping the button below will navigate back to a different screen, with preload state</text>
      <view action="close"
            href="/navigation/changed.xml"
            show-during-load="loadingScreen"
            delay="500"
            style="Button">
        <text style="Button__Label">Close with loading</text>
      </view>
    </body>
  </screen>
  <screen id="loadingScreen">
    <styles>
      <style alignItems="center"
             backgroundColor="white"
             borderBottomColor="#eee"
             borderBottomWidth="1"
             flexDirection="row"
             height="72"
             id="Header"
             paddingLeft="24"
             paddingRight="24"
             paddingTop="24" />
      <style color="blue"
             fontWeight="600"
             fontSize="16"
             id="Header__Back"
             paddingRight="16" />
      <style color="black"
             fontWeight="600"
             fontSize="24"
             id="Header__Title" />
      <style backgroundColor="white"
             flex="1"
             id="Body" />
      <style fontWeight="normal"
             fontSize="16"
             id="Description"
             margin="24"
             marginBottom="0" />
      <style alignItems="center"
             flex="1"
             id="Loading"
             justifyContent="center" />
    </styles>
    <body style="Body">
      <header style="Header">
        <text action="back"
              href="#"
              style="Header__Back">Back</text>
        <text style="Header__Title">Loading...</text>
      </header>
      <view style="Loading">
        <text style="Description">Custom loading screen...</text>
        <spinner />
      </view>
    </body>
  </screen>
</doc>
