{
  "private": true,
  "name": "mobile",
  "packageManager": "yarn@4.3.1",
  "workspaces": [
    "demo",
    "hyperview",
    "website"
  ],
  "installConfig": {
    "hoistingLimits": "dependencies"
  },
  "scripts": {
    "test:lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test:ts": "yarn workspace hyperview tsc --noEmit",
    "test:unit": "echo 'Skipping unit tests for now'",
    "test": "yarn test:ts && yarn test:lint",
    "prettier": "prettier --write \"**/*.{js,ts,tsx,md,json,xml,xsd}\"",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/eslint-parser": "^7.26.5",
    "@react-native/babel-preset": "^0.73.0",
    "@prettier/plugin-xml": "0.13.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^7.20.0",
    "eslint-import-resolver-babel-module": "^5.2.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-instawork": "0.12.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.2.1",
    "typescript": "^5.7.3"
  }
}
